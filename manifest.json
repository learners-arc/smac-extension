{
  "manifest_version": 3,
  "name": "Social Media Auto-Comment",
  "version": "1.0.0",
  "description": "Automatically comment on LinkedIn and Twitter posts using AI, targeting Computer Science student-relevant content.",
  
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "alarms",
    "idle"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*", 
    "https://x.com/*",
    "https://twitter.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": [
        "content-scripts/linkedin.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content-scripts/twitter.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Social Media Auto-Comment",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "utils/*.js",
        "services/*.js",
        "prompts/*.js"
      ],
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://x.com/*", 
        "https://twitter.com/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://generativelanguage.googleapis.com https://www.linkedin.com https://x.com https://twitter.com;"
  },
  
  "author": "Social Media Auto-Comment Extension",
  "homepage_url": "https://github.com/your-repo/social-media-auto-comment",
  
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle the auto-comment extension on/off"
    }
  },
  
  "minimum_chrome_version": "88"
}